@model IEnumerable<RighesJoy.Models.Product>

@{
    ViewData["Title"] = "Product Catalog";
}

<h1>Product Catalog</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>
                    <a href="@Url.Action("Details","Product", new { id = product.Id})"> View Details </a>
                </td>
            </tr>
        }
    </tbody>
</table>
